LISTEN_ADDR=:8080
DATABASE_URL=postgres://postgres:postgres@localhost:5432/hermit?sslmode=disable
STORAGE_ROOT=./data

# Admin token for bootstrap + internal token mint endpoint.
ADMIN_TOKEN=dev-admin-token

# Allowed browser origins for CORS (comma/newline/semicolon separated).
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Default repository trio.
DEFAULT_HOSTED_REPO=hosted
DEFAULT_GROUP_REPO=group
DEFAULT_PROXY_REPO=proxy

# Optional upstream for proxy repo, e.g. https://clawhub.ai
PROXY_UPSTREAM_URL=

# Optional multi-upstream (comma/newline/semicolon separated), e.g.
# PROXY_UPSTREAM_URLS=https://clawhub.ai,https://example-registry.internal
PROXY_UPSTREAM_URLS=

# Bootstrap default hosted/group/proxy repos on startup.
BOOTSTRAP_DEFAULT_REPOS=true

PROXY_TIMEOUT=30s
PROXY_NEGATIVE_TTL=5m

# Background proxy sync (crawl upstream catalog -> warm proxy cache).
PROXY_SYNC_ENABLED=false
PROXY_SYNC_INTERVAL=30m
PROXY_SYNC_DELAY=10s
PROXY_SYNC_PAGE_SIZE=100
PROXY_SYNC_CONCURRENCY=4

MAX_UPLOAD_BYTES=134217728
